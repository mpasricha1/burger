<div class="container-fluid"> 
	<h1>Burgers</h1>
	<div class="row">
			<div class="col-md-12">
				<form class="create-form"> 
					<div class="form-group">
						<input type="text" id="burger" name="name">
					</div>
					<button type="submit">Submit</button>
				</form>
			</div>
	</div>	

	<p>Enter a burger you want to eat and click "Submit"</p>

	<div class="row">
		<div class="col-md-6">
			<div class="list-group" id="newburgers">
				{{#each burgers}}
					{{#unless devoured}}
					<li class="list-group-item">{{burger_name}}<button>Devour Me</button></li>
					{{/unless}}
				{{/each}}

			</div>
		</div>
		<div class="col-md-6">
			<div class="list-group" id="eatburgers">
				{{#each burgers}}
					{{#if devoured}}
					<li class="list-group-item">{{burger_name}}</li>
					{{/if}}
				{{/each}}
			</div>
		</div
	</div>
</div

