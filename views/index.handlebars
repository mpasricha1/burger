<div class="row">
	<h1>Tasty Burgers To Eat!</h1>
</div>
<div class="row" id="inputArea">
	<div class="col-md-12">
		<form class="create-form"> 
			<div class="form-group">
				<input type="text" class="form-control" id="burger" name="name" placeholder="Submit new burger to eat">
			</div>
			<button type="submit" class="btn btn-primary" id='newSubmit'>Submit</button>
		</form>	
	</div>
	
</div>
<div class="row">
	<div class="col-md-6">
		<h4>Burgers to Eat!</h4>
	</div>
	<div class="col-md-6">
		<h4>Devoured Burgers!</h4>
	</div>
</div>
<div class="row">
	<div class="col-md-6">
		<div class="list-group" id="newburgers">
			{{#each burgers}}
				{{#unless devoured}}
					<div class="row">
						<div class="col-md-4">
							<li>{{burger_name}}</li>
						</div>
						<div class="col-md-2">
							<button class="btn btn-primary devour-button" data-id="{{id}}" >Devour Me</button>
						</div>
					</div>
				{{/unless}}
			{{/each}}
		</div>
	</div>
	<div class="col-md-6">
			<div class="list-group" id="eatburgers">
				{{#each burgers}}
					{{#if devoured}}
					<li>{{burger_name}}</li>
					{{/if}}
				{{/each}}
			</div>
		</div
	</div>
</div>

