<div class="container-fluid"> 
	<h1>Burgers</h1>
	<div class="row">
		<div class="col-md-3">
			<form class="create-form"> 
				<div class="form-group">
					<input type="text" class="form-control" id="burger" name="name">
				</div>
				<button type="submit" class="btn btn-primary">Submit</button>
			</form>
		</div>
	</div>	

	<p>Enter a burger you want to eat and click "Submit"</p>

	<div class="row">
		<h4>Burgers to Eat!</h4>
		<div class="col-md-6">
			<div class="list-group" id="newburgers">
				{{#each burgers}}
					{{#unless devoured}}
					<div class="row">
						<div class="col-md-4">
							<li>{{burger_name}}</li>
						</div>
						<div class="col-md-2">
							<button class="btn btn-primary devour-button" data-id="{{id}}" >Devour Me</button>
						</div>
					</div>
					{{/unless}}
				{{/each}}
			</div>
		</div>
		<h4>Devoured Burgers!</h4>
		<div class="col-md-6">
			<div class="list-group" id="eatburgers">
				{{#each burgers}}
					{{#if devoured}}
					<li>{{burger_name}}</li>
					{{/if}}
				{{/each}}
			</div>
		</div
	</div>
</div

